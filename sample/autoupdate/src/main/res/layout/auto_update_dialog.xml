<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:paddingBottom="4dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/tv_new_version"
        android:textColor="#2299ee"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2299ee"
        android:layout_marginBottom="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <TextView
            android:id="@+id/tv_hint_version_name"
            android:textSize="14sp"
            android:textColor="#666666"
            android:text="@string/tv_hint_version_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"/>
        <TextView
            android:id="@+id/tv__version_name"
            android:layout_toRightOf="@id/tv_hint_version_name"
            android:layout_toEndOf="@id/tv_hint_version_name"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/tv_install_hint"
            android:layout_marginBottom="20dp"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_hint_version_name"
            android:text="@string/tv_install_hint"/>
        <TextView
            android:textSize="13sp"
            android:textColor="#888888"
            android:layout_below="@+id/tv_install_hint"
            android:id="@+id/tv_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_update"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:textSize="13sp"
            android:textColor="#888888"
            android:lineSpacingExtra="10dp"
            android:layout_below="@+id/tv_update"
            android:id="@+id/tv_update_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="@string/btn_cancel"
            android:background="@color/btn_cancel"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"/>
        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"/>
        <Button
            android:text="@string/btn_sure"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:background="@color/btn_sure"
            android:id="@+id/btn_sure"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>